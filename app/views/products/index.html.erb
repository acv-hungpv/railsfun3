<table>
<% @products.each do |product| %>
	<tr>
		<td> <%= link_to product.title, product_path(product) %> </td>
		<td> <%= product.category.try(:name) %></td>
		<td> <%= product.price %></td>
		<td> <%= link_to 'Edit', edit_product_path(product) %> </td>
		<td> <%= link_to('Delete', product_path(product), method: :delete,data: { confirm: 'are you sure to delete this product?' }) %> </td>
	</tr>
<% end %>
</table>

<%= link_to('create', new_product_path) %>